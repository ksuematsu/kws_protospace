.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{ href: "#" }
          %img.media-object{ alt: "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", src: "#{ @user.avatar }", style: "width: 64px; height: 64px;" }/
      .media-body
        %h4#top-aligned-media.media-heading
          #{ @user.user_name }
          %span.label.label-default.project-number
            #{ @user.prototypes.length }
            %i Projects
        .proto-user
          %span.degree #{ @user.member_of }
        .row
          .col-md-6
            %h4 Profile
            %p #{ @user.profile }
          .col-md-6
            %h4 Works
            %p #{ @user.works }
.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          %a{ href: "/prototypes/#{prototype.id}" }
            = image_tag("#{ main_image(prototype) }")
            .caption
              %h3 #{ prototype.title }
              .proto-meta
                .proto-date
                  = date_of_created(prototype)
              %ul.proto-tag-list.list-inline
                %li
                  %a{ href: "#", class: "btn btn-default" } iPad
                %li
                  %a{ href: "#", class: "btn btn-default" } wireframe
.text-center
  %ul.pagination
    %li.disabled
      = paginate(@prototypes)

