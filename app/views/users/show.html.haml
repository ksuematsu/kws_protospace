.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{href: "#"}
          %img.media-object{alt: "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", src: "#{current_user.avatar}", style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          #{current_user.user_name}
          %span.label.label-default.project-number
            #{current_user.prototypes.length}
            %i Projects
        .proto-user
          %span.degree #{current_user.member_of}
        .row
          .col-md-6
            %h4 Profile
            %p #{current_user.profile}
          .col-md-6
            %h4 Works
            %p #{current_user.works}
.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          %a{href: prototype_path}
            = image_tag("#{prototype.image.main_image}")
            .caption
              %h3 #{prototype.title}
              .proto-meta
                .proto-date
                  = "#{prototype.created_at.month}, #{prototype.created_at.day}"
              %ul.proto-tag-list.list-inline
                %li
                  %a{href: "#", class: "btn btn-default"} iPad
                %li
                  %a{href: "#", class: "btn btn-default"} wireframe
.text-center
  %ul.pagination
    %li.disabled
      = paginate(@prototypes)

