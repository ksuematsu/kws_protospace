.container.user-new
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        = form_for current_user do |f|
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :user_name, value: current_user.user_name
            .user-image.col-md-2{style: "background-image: url(#{current_user.avatar})"}
              %button.btn.btn-primary Change image
              %input{type: "file"}/
          = f.text_field :email, value: current_user.email
          = f.text_field :password, placeholder: "Password"
          .col-md-12
            %h4 Member of
            .user-user-member.row
              .user-name.col-md-12
                = f.text_field :member_of, value: current_user.member_of
            %h4 Profile
            .user-user-profile.row
              .user-name.col-md-12
                = f.text_area :profile, cols: "30", rows: "4", value: current_user.profile
            %h4 Works 
            .user-name_image.row
              .user-name.col-md-12
                = f.text_area :works, cols: "30", rows: "4", value: current_user.works
            .actions.btn.btn-lg.btn-primary.btn-block
              = f.submit "Save"
        