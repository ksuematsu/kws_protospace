.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    = if flash[:notice]
      .alert.alert-success
        = flash[:notice]
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          %a{href: "#"} Popular PROTO
        %li{role: "presentation"}
          %a{href: "#"} Newest PROTO
      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          %a{href: "/prototypes/#{prototype.id}"}
            = image_tag "#{prototype.image.main_image.url.to_s}"
            .caption
              %h3
                = prototype.title
              .proto-meta
                .proto-user
                  %a{href:""}
                    by ヤマダ
                .proto-posted
                  = "#{prototype.created_at.month}, #{prototype.created_at.day}"
              %ul.proto-tag-list.list-inline
                %li
                  %a{href: "#", class: "btn btn-default"}
                    = prototype.web_design
                %li
                  %a{href: "#", class: "btn btn-default"}
                    = prototype.ui

.text-center
  %ul.pagination
    %li.disabled
      = paginate(@prototypes)
