.container.proto-page
  %header.row.user-nav
    = if flash[:notice]
      .alert.alert-success
        = flash[:notice]
    .col-md-6
      .media
        .media-left
          %a{ href: "#" }
            %img.media-object{ alt: "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", src: creater_avatar, style: "width: 64px; height: 64px;" }/
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            %a{ href: creater_path } by #{ by_whom?(@prototype) }
            %span.degree #{ affiliation }
    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag("#{ @prototype.image.main_image.url.to_s }", class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        %li.list-group-item
          = image_tag("#{ sub_image(1) }", class: 'img-responsive')
        %li.list-group-item
          = image_tag("#{ sub_image(2) }", class: 'img-responsive')
        %li.list-group-item
          = image_tag("#{ sub_image(3) }", class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p #{ @prototype.catch_copy }
    .col-md-6
      %h4 Concept
      %p #{ @prototype.concept }
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        = render partial: 'tag', collection: @tags
  = render 'form'

  = link_to('Like', like_prototype_path(@prototype), method: :put)
  = link_to('Dislike', dislike_prototype_path(@prototype), method: :put)

